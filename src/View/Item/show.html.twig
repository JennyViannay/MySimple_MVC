{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Item {{ item.title }}</h1>
    <p>{{ item.id }}. {{ item.title }}</p>
    <p>{{ item.img }}</p>
    <p>{{ item.content }}</p>
    <p>{{ item.author }}</p>
    <a href="/item/edit/{{ item.id }}">Edit</a>
    <a href="/item/delete/{{item.id}}">Supprimer</a>
    <a href="/item/index">Back</a>
{% endblock %}
